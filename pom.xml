	<modelVersion>4.0.0</modelVersion>
	<groupId>CCC7</groupId>
	<artifactId>build</artifactId>
	<packaging>pom</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>build</name>
	<url>http://maven.apache.org</url>
