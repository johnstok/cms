<hibernate-mapping default-access="field">
    <joined-subclass
        name="ccc.domain.Content" extends="ccc.domain.Resource">
        <key column="id" />
        
        <!-- 
         | TODO: We need to provide a TreeMap here!
         -->
        <map name="content">
            <key column="id"  not-null="true" />
            <map-key type="string" length="256" />
            <composite-element class="ccc.domain.Paragraph">
                <property name="body" not-null="true" type="text"></property>
            </composite-element>
        </map>
    </joined-subclass>
</hibernate-mapping>