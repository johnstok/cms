<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
    <joined-subclass
        name="ccc.domain.Folder"  extends="ccc.domain.Resource">
        
        <key column="id" />
        
        <list name="entries">
            <key column="parent_id" />
            <list-index column="parent_index" />
            <one-to-many class="ccc.domain.Resource" />
        </list>
        
    </joined-subclass>
</hibernate-mapping>