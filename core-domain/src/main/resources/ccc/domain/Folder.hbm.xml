<hibernate-mapping default-access="field">
    <joined-subclass
        name="ccc.domain.Folder"  extends="ccc.domain.Resource">
        
        <key column="id" />
        
        <list name="entries">
            <key column="parent_id" />
            <list-index column="parent_index" />
            <one-to-many class="ccc.domain.Resource" />
        </list>
        
    </joined-subclass>
</hibernate-mapping>