<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<artifactId>build</artifactId>
		<groupId>CCC7</groupId>
		<version>0.0.7-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>CCC7</groupId>
	<artifactId>data-migration</artifactId>
	<name>data-migration</name>
	<version>0.0.7-SNAPSHOT</version>
	<url>http://maven.apache.org</url>
	<dependencies>
		<dependency>
			<groupId>CCC7</groupId>
			<artifactId>core-domain</artifactId>
			<version>0.0.7-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.0.74</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc14_g</artifactId>
			<version>10.2.0.4.0</version>
		</dependency>
		<dependency>
			<groupId>CCC7</groupId>
			<artifactId>business-services</artifactId>
			<version>0.0.7-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.jboss.client</groupId>
			<artifactId>jbossall-client</artifactId>
			<version>4.2.2.GA</version>
		</dependency>
		<dependency>
			<groupId>org.apache.geronimo.specs</groupId>
			<artifactId>geronimo-ejb_3.0_spec</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>commons-dbutils</groupId>
			<artifactId>commons-dbutils</artifactId>
			<version>1.1</version>
		</dependency>
		<dependency>
			<groupId>CCC7</groupId>
			<artifactId>services-ejb3</artifactId>
			<version>0.0.7-SNAPSHOT</version>
			<scope>runtime</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>
							**/MigrationIntegrationTest.java
						</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>acceptance</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>run-data-migration</id>
								<phase>pre-integration-test</phase>
								<configuration>
									<tasks>
										<echo>Running migration</echo>

										<property
											name="compile_classpath" refid="maven.compile.classpath" />
										<property
											name="runtime_classpath" refid="maven.runtime.classpath" />
										<property name="test_classpath"
											refid="maven.test.classpath" />
										<property
											name="plugin_classpath" refid="maven.plugin.classpath" />

										<echo
											message="compile classpath: ${compile_classpath}" />
										<echo
											message="runtime classpath: ${runtime_classpath}" />
										<echo
											message="test classpath:    ${test_classpath}" />
										<echo
											message="plugin classpath:  ${plugin_classpath}" />

										<path
											id="migration.classpath">
											<pathelement
												path="${test_classpath}" />
										</path>
										<property
											name="migration_classpath" refid="migration.classpath" />
										<echo
											message="data migration classpath: ${migration_classpath}" />
										<java
											classname="ccc.migration.App" fork="false" failonerror="true"
											classpath="${migration_classpath}">
										</java>

									</tasks>
								</configuration>
								<goals>
									<goal>run</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>data-integration</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<executions>
							<execution>
								<id>run-data-migration</id>
								<phase>pre-integration-test</phase>
							</execution>
						</executions>
						<configuration>
							<excludes>
								<exclude>
									**/MigrationsEJBTest.java
								</exclude>
								<exclude>**/QueriesTest.java</exclude>
							</excludes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>