<hibernate-mapping default-access="field">
	<class name="ccc.domain.Resource" abstract="true">
	
		<id name="id">
			<generator class="assigned" />
		</id>
		
		<version name="version" unsaved-value="negative" />

		<property name="title" not-null="true" type="string"
			length="256" />

		<component name="name" class="ccc.domain.ResourceName">
			<property name="representation" not-null="true"
				type="string" length="256" />
		</component>

        <!-- Add a read only property to access the parent_id column -->
	</class>
</hibernate-mapping>