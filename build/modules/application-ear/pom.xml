<?xml version="1.0" encoding="UTF-8"?>
<project>
    <parent>
        <artifactId>build</artifactId>
        <groupId>CCC7</groupId>
        <version>7.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>CCC7</groupId>
    <artifactId>application-ear</artifactId>
    <packaging>ear</packaging>
    <name>application-ear</name>
    <version>7.0.0-SNAPSHOT</version>
    <url>http://maven.apache.org</url>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <displayName>CCC7</displayName>
                    <version>5</version>
                    <defaultLibBundleDir>lib</defaultLibBundleDir>
                    <applicationXml>${basedir}/application.xml</applicationXml>
                    <earSourceDirectory>${basedir}/includes</earSourceDirectory>
                    <generatedDescriptorLocation>
                        ${basedir}/target/descriptors
                    </generatedDescriptorLocation>
                    <modules>
                        <webModule>
                            <groupId>CCC7</groupId>
                            <artifactId>content-server</artifactId>
                            <contextRoot>/server</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>CCC7</groupId>
                            <artifactId>content-creator</artifactId>
                            <contextRoot>/creator</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>CCC7</groupId>
                            <artifactId>rest-api</artifactId>
                            <contextRoot>/api</contextRoot>
                        </webModule>
                        <ejbModule>
                            <groupId>CCC7</groupId>
                            <artifactId>services-ejb3</artifactId>
                        </ejbModule>
                        <sarModule>
                            <groupId>CCC7</groupId>
                            <artifactId>security-config</artifactId>
                        </sarModule>
                    </modules>
                    <jboss>
                        <version>4.2</version>
                        <loader-repository>
                            CCC7:archive=CCC7.ear
                        </loader-repository>
                    </jboss>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>

        <!-- Modules -->
        <dependency>
            <groupId>CCC7</groupId>
            <artifactId>content-server</artifactId>
            <type>war</type>
            <version>7.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>CCC7</groupId>
            <artifactId>content-creator</artifactId>
            <type>war</type>
            <version>7.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>CCC7</groupId>
            <artifactId>rest-api</artifactId>
            <type>war</type>
            <version>7.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>CCC7</groupId>
            <artifactId>services-ejb3</artifactId>
            <type>ejb</type>
            <version>7.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>CCC7</groupId>
            <artifactId>security-config</artifactId>
            <type>sar</type>
            <version>7.0.0-SNAPSHOT</version>
        </dependency>

        <!-- Shared dependencies -->
        <dependency>
            <groupId>CCC7</groupId>
            <artifactId>business-services</artifactId>
            <version>7.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>CCC7</groupId>
            <artifactId>rendering-engine</artifactId>
            <version>7.0.0-SNAPSHOT</version>
        </dependency>

        <!-- For rest-api -->
        <dependency>
            <groupId>org.jboss.resteasy</groupId>
            <artifactId>resteasy-jaxrs</artifactId>
            <version>1.0-beta-8</version>
            <exclusions>
                <exclusion>
                    <groupId>javax.servlet</groupId>
                    <artifactId>servlet-api</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>javax.annotation</groupId>
                    <artifactId>jsr250-api</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>javax.activation</groupId>
                    <artifactId>activation</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>javax.mail</groupId>
                    <artifactId>mail</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>tjws</groupId>
                    <artifactId>webserver</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.jyaml</groupId>
                    <artifactId>jyaml</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.sun.xml.bind</groupId>
                    <artifactId>jaxb-impl</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.sun.xml.fastinfoset</groupId>
                    <artifactId>FastInfoset</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.sun.xml.stream</groupId>
                    <artifactId>sjsxp</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>commons-httpclient</groupId>
                    <artifactId>commons-httpclient</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.codehaus.jettison</groupId>
                    <artifactId>jettison</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>javassist</groupId>
                    <artifactId>javassist</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- For content-server -->
        <dependency>
            <groupId>org.apache.velocity</groupId>
            <artifactId>velocity</artifactId>
            <version>${velocity-version}</version>
        </dependency>

        <!-- For content-creator -->
        <dependency>
            <groupId>com.extjs</groupId>
            <artifactId>gxt</artifactId>
            <version>${gxt-version}</version>
        </dependency>
        <dependency>
            <groupId>commons-fileupload</groupId>
            <artifactId>commons-fileupload</artifactId>
            <version>1.2.1</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.3.2</version>
        </dependency>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-servlet</artifactId>
            <version>${gwt-version}</version>
        </dependency>

        <!-- For migration -->
        <dependency>
            <groupId>CCC7</groupId>
            <artifactId>data-migration</artifactId>
            <version>7.0.0-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <!-- Indirectly referenced; not needed in ear? -->
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <version>${gwt-version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>deploy</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>jboss-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>deploy</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>deploy</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>migrate</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>run-data-migration</id>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <tasks>
                                        <echo>Running migration</echo>

                                        <property name="test_classpath"
                                            refid="maven.test.classpath" />
                                        <path id="migration.classpath">
                                            <pathelement
                                                path="${test_classpath}" />
                                        </path>
                                        <property name="migration_classpath"
                                            refid="migration.classpath" />
                                        <echo
                                            message="data migration classpath: ${migration_classpath}" />

                                        <java
                                            classname="ccc.cli.Users"
                                            fork="true"
                                            failonerror="true"
                                            classpath="${migration_classpath}">
                                            <arg value="migration"/>
                                            <arg value="migration@civicuk.com"/>
                                            <arg value="migration"/>
                                        </java>
                                        <java
                                            classname="ccc.cli.App"
                                            fork="true"
                                            failonerror="true"
                                            classpath="${migration_classpath}" />
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>ff-acceptance</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>selenium-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>run-selenese-tests</id>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>selenese</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <browser>*custom firefox -P Selenium -no-remote</browser>
                            <startURL>http://localhost:8080/</startURL>
                            <suite>src/test/selenese/acceptance-tests.html</suite>
                            <timeoutInSeconds>1800</timeoutInSeconds>
                            <background>true</background>
                            <port>5555</port>
                            <logOutput>true</logOutput>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>assemble</id>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                        <executions>
                            <execution>
                                <id>bundle-installer</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>