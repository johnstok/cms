<web-app
    version="2.5"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
    <display-name>CCC Content Management System</display-name>
    
    <context-param>
        <param-name>resteasy.scan.resources</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>resteasy.providers</param-name>
        <param-value>
            ccc.ws.CommandFailedExceptionMapper,
            ccc.ws.DurationReader,
            ccc.ws.FailureWriter,
            ccc.ws.IdReader,
            ccc.ws.AliasDeltaReader,
            ccc.ws.JsonReader,
            ccc.ws.TemplateDeltaReader,
            ccc.ws.PageDeltaReader,
            ccc.ws.UserDeltaReader,
            ccc.ws.BooleanProvider,
            ccc.ws.JsonableWriter,
            ccc.ws.MetadataWriter,
            ccc.ws.JsonableCollectionWriter,
            ccc.ws.ResourceSummaryCollectionReader,
            ccc.ws.StringCollectionWriter
        </param-value>
    </context-param>
    <context-param>
       <param-name>resteasy.servlet.mapping.prefix</param-name>
       <param-value>/api</param-value>
    </context-param>

    <listener>
        <listener-class>
            org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>Resteasy</servlet-name>
        <servlet-class>
            org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>
            ccc.contentcreator.remoting.CreateFileServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateFileServlet</servlet-name>
        <servlet-class>
            ccc.contentcreator.remoting.UpdateFileServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>preview-content</servlet-name>
        <servlet-class>ccc.contentcreator.remoting.ContentServlet</servlet-class>
        <init-param>
            <param-name>root_name</param-name>
            <param-value>content</param-value>
        </init-param>
        <init-param>
            <param-name>respect_visibility</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>preview-assets</servlet-name>
        <servlet-class>ccc.contentcreator.remoting.ContentServlet</servlet-class>
        <init-param>
            <param-name>root_name</param-name>
            <param-value>assets</param-value>
        </init-param>
            <init-param>
            <param-name>respect_visibility</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>content</servlet-name>
        <servlet-class>ccc.contentcreator.remoting.ContentServlet</servlet-class>
        <init-param>
            <param-name>root_name</param-name>
            <param-value>content</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>assets</servlet-name>
        <servlet-class>ccc.contentcreator.remoting.ContentServlet</servlet-class>
        <init-param>
            <param-name>root_name</param-name>
            <param-value>assets</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ccc.contentcreator.remoting.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>ccc.contentcreator.remoting.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>broken-links</servlet-name>
        <servlet-class>ccc.contentcreator.remoting.BrokenLinkServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>error</servlet-name>
        <jsp-file>/error.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>notfound</servlet-name>
        <jsp-file>/notfound.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Resteasy</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateFileServlet</servlet-name>
        <url-pattern>/update_file</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>content</servlet-name>
        <url-pattern>/content/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>assets</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>preview-content</servlet-name>
        <url-pattern>/preview/content/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>preview-assets</servlet-name>
        <url-pattern>/preview/assets/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>broken-links</servlet-name>
        <url-pattern>/${application.prefix}/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>notfound</servlet-name>
        <url-pattern>/notfound</url-pattern>
    </servlet-mapping>
    
    <!--
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
    -->

    <welcome-file-list>
        <welcome-file>content/</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/notfound</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error</location>
    </error-page>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure Area</web-resource-name>
            <url-pattern>/upload</url-pattern>
            <url-pattern>/update_file</url-pattern>
            <url-pattern>/preview/*</url-pattern>
            <url-pattern>/api/secure/*</url-pattern>
            <!-- Secure all HTTP Methods -->
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMINISTRATOR</role-name>
            <role-name>CONTENT_CREATOR</role-name>
            <role-name>SITE_BUILDER</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Public Area</web-resource-name>
            <url-pattern>/api/public/*</url-pattern>
            <url-pattern>/content/*</url-pattern>
            <url-pattern>/assets/*</url-pattern>
            <url-pattern>/${application.prefix}/*</url-pattern>
            <url-pattern>/login</url-pattern>
            <url-pattern>/logout</url-pattern>
            <url-pattern>/error</url-pattern>
            <url-pattern>/notfound</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/Login.html</form-login-page>
            <form-error-page>/LoginError.html</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>ADMINISTRATOR</role-name>
    </security-role>
    <security-role>
        <role-name>CONTENT_CREATOR</role-name>
    </security-role>
    <security-role>
        <role-name>SITE_BUILDER</role-name>
    </security-role>
</web-app>
