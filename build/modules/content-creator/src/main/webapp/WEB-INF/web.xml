<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Content Creator</display-name>

    <servlet>
        <servlet-name>Queries</servlet-name>
        <servlet-class>
            ccc.contentcreator.remoting.QueriesImpl
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Commands</servlet-name>
        <servlet-class>
            ccc.contentcreator.remoting.CommandsImpl
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Security</servlet-name>
        <servlet-class>
            ccc.contentcreator.remoting.SecurityImpl
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>
            ccc.contentcreator.remoting.FileUploadServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateFileServlet</servlet-name>
        <servlet-class>
            ccc.contentcreator.remoting.UpdateFileServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>content</servlet-name>
        <servlet-class>ccc.content.server.ContentServlet</servlet-class>
        <init-param>
            <param-name>root_name</param-name>
            <param-value>content</param-value>
        </init-param>
        <init-param>
            <param-name>respect_visibility</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>assets</servlet-name>
        <servlet-class>ccc.content.server.ContentServlet</servlet-class>
        <init-param>
            <param-name>root_name</param-name>
            <param-value>assets</param-value>
        </init-param>
            <init-param>
            <param-name>respect_visibility</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>error</servlet-name>
        <jsp-file>/error.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>notfound</servlet-name>
        <jsp-file>/notfound.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Queries</servlet-name>
        <url-pattern>/queries</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Commands</servlet-name>
        <url-pattern>/commands</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Security</servlet-name>
        <url-pattern>/security</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateFileServlet</servlet-name>
        <url-pattern>/update_file</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>content</servlet-name>
        <url-pattern>/content/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>assets</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>notfound</servlet-name>
        <url-pattern>/notfound</url-pattern>
    </servlet-mapping>
    
    <!-- session-config>
        <session-timeout>1</session-timeout>
    </session-config -->

    <welcome-file-list>
        <welcome-file>ContentCreator.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/notfound</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error</location>
    </error-page>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure Area</web-resource-name>
            <url-pattern>/queries</url-pattern>
            <url-pattern>/commands</url-pattern>
            <url-pattern>/upload</url-pattern>
            <url-pattern>/update_file</url-pattern>
            <url-pattern>/content/*</url-pattern>
            <url-pattern>/error</url-pattern>
            <url-pattern>/notfound</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMINISTRATOR</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/Login.html</form-login-page>
            <form-error-page>/LoginError.html</form-error-page>
        </form-login-config>
    </login-config>

</web-app>
