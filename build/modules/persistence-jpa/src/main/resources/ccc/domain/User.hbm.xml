<hibernate-mapping default-access="field">
	
    <class name="ccc.domain.User" table="users">
    
        <id name="_id" 
        	column="id" 
        	type="ccc.persistence.jpa.UUIDUserType"
        	length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
        
        <component name="_username" class="ccc.types.Username">
            <property name="_value" 
                column="username" 
                unique="true" 
                not-null="true" 
                type="string" 
                length="255" />
        </component>

        <property
            name="_hash"
            column="hash"
            not-null="true"
            length="255" />
        
        <component name="_email" class="ccc.types.EmailAddress">
            <property name="_text" column="email" not-null="true" type="string" length="512" />
        </component>
            
        <set name="_roles" lazy="false" table="user_roles"> <!-- TODO: set lazy to true -->
            <key not-null="true" column="user_id" foreign-key="FK_USERROLES_USER_ID"/>
            <element
                column="role"
                type="string"
                not-null="true"
                length="255" />
        </set>
        
        <map name="_metadata" table="user_metadata">
            <cache usage="transactional"/>
            <key column="user_id" not-null="true" foreign-key="FK_USERMETADATA_RESOURCE_ID"/>
            <map-key type="string" column="datum_key" length="255" />
            <element type="string" column="datum_value" length="1024" not-null="true"/>
        </map>
            
    </class>
    
    <query name="users">from ccc.domain.User u left join fetch u._roles</query>
    <query name="usersWithRole">from ccc.domain.User u left join fetch u._roles where ? in elements(u._roles)</query>
    <query name="usersWithUsername">from ccc.domain.User u where lower(u._username._value) like ?</query>
    <query name="usersWithEmail">from ccc.domain.User u where lower(u._email._text) like ?</query>
</hibernate-mapping>