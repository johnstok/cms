<hibernate-mapping default-access="field">
    <class name="ccc.domain.Password" table="passwords">
    
        <id name="_id" 
        	column="id" 
        	type="ccc.persistence.jpa.UUIDUserType"
        	length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_hash"
            column="hash"
            not-null="true"
            length="255" />
            
        <many-to-one
            name="_user"
            column="user_id"
            not-null="true"
            unique="true"
            foreign-key="FK_PASSWORD_USER_ID"/>
            
    </class>
</hibernate-mapping>