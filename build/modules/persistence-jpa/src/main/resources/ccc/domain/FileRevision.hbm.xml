<hibernate-mapping default-access="field">

    <typedef class="ccc.persistence.jpa.EnumUserType" name="ParagraphType">
        <param name="type">ccc.api.ParagraphType</param>
    </typedef>
    
    <class
        name="ccc.domain.FileRevision"
        mutable="false"
        table="file_revisions">
        
        <cache usage="transactional"/>
        
        <id name="_id" 
            column="id" 
            type="ccc.persistence.jpa.UUIDUserType"
            length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
		
        <property
            name="_size"
            column="size_in_bytes"
            not-null="true"
            type="int" />

        <component
            name="_data"
            class="ccc.domain.Data"
            unique="false">
            <property
                name="_id"
                not-null="true"
                column="data_id"
                type="ccc.persistence.jpa.UUIDUserType" 
                length="36" />
        </component>
        
        <component
            name="_mimeType"
            class="ccc.api.MimeType">
            <property
                name="_primaryType"
                not-null="true"
                column="mime_type_primary"
                type="string" 
                 length="255" />
            <property
                name="_subType"
                not-null="true"
                column="mime_type_sub"
                type="string" 
                 length="255" />
        </component>
        
        <property
            name="_majorChange"
            column="major_change"
            not-null="true" />
        <property
            name="_comment"
            column="actor_comment"
            not-null="false"
            length="1024"
            type="string" />   
        <property
            name="_timestamp"
            column="timestamp"
            not-null="true"
            type="timestamp" />
        <many-to-one
            name="_actor"
            column="actor_id"
            not-null="true"
            foreign-key="FK_FILE_REV_USER_ACTOR_ID" />
    </class>
    
</hibernate-mapping>