<hibernate-mapping default-access="field">

    <typedef class="ccc.persistence.jpa.EnumUserType" name="ActionType">
        <param name="type">ccc.api.CommandType</param>
    </typedef>
    <typedef class="ccc.persistence.jpa.EnumUserType" name="StatusType">
        <param name="type">ccc.api.ActionStatus</param>
    </typedef>
    
    <class name="ccc.domain.Action" table="actions">
        
        <id name="_id" 
        	column="id" 
        	type="ccc.persistence.jpa.UUIDUserType" 
        	length="36">
            <generator class="assigned" />
        </id>
        
        <property
            name="_executeAfter"
            column="execute_after"
            type="timestamp"
            not-null="true" />
        <property
            name="_type"
            column="command"
            type="ActionType"
            not-null="true"
            length="256" />
        <property
            name="_status"
            column="status"
            type="StatusType"
            not-null="true"
            length="256" />
        <property
            name="_isMajorEdit"
            column="major_change"
            not-null="true"
            type="boolean"/>
        <property
            name="_comment"
            column="message"
            not-null="true"
            type="string"
            length="1024"/>
        
        <many-to-one
            name="_actor"
            column="actor_id"
            not-null="true"
            foreign-key="FK_ACTION_USER_ACTOR_ID"/>
        <many-to-one
            name="_subject"
            column="subject_id"
            not-null="true"
            foreign-key="FK_ACTION_RESOURCE_SUBJECT_ID" />
        
        <component name="_parameters" class="ccc.domain.Snapshot">
			<property
                name="detail"
                column="parameters"
                type="text"
                not-null="true"
                access="property" />
		</component>
        
        <component name="_failure" class="ccc.api.Failure">
            <property
                name="_code"
                column="failure_code"
                type="integer" />
            <property
                name="_exceptionId"
                column="failure_exception_id"
                type="string" 
                length="256" />
            <component name="_params" class="ccc.api.ParamList">
                <property
                    name="canonicalForm"
                    column="failure_params"
                    type="string"
                    length="1024"
                    access="property" />
            </component>
        </component>
        
    </class>
    
    <query name="latest_action">FROM ccc.domain.Action a WHERE a._status='Scheduled' AND a._executeAfter &lt; ? ORDER BY a._executeAfter asc</query>
    <query name="executed">FROM ccc.domain.Action a WHERE a._status!='Scheduled'</query>
    <query name="pending">FROM ccc.domain.Action a WHERE a._status='Scheduled'</query>
</hibernate-mapping>