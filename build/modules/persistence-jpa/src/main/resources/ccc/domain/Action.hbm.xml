<hibernate-mapping default-access="field">

    <typedef class="ccc.persistence.jpa.EnumUserType" name="ActionType">
        <param name="type">ccc.api.CommandType</param>
    </typedef>
    <typedef class="ccc.persistence.jpa.EnumUserType" name="StatusType">
        <param name="type">ccc.api.ActionStatus</param>
    </typedef>
    
    <class name="ccc.domain.Action" table="actions">
        
        <id name="_id" 
        	column="id" 
        	type="ccc.persistence.jpa.UUIDUserType" 
        	length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_executeAfter"
            column="execute_after"
            type="timestamp"
            not-null="true" />
        <property
            name="_type"
            column="command"
            type="ActionType"
            not-null="true"
            length="255" />
        <property
            name="_status"
            column="status"
            type="StatusType"
            not-null="true"
            length="255" />
        
        <many-to-one
            name="_actor"
            column="actor_id"
            not-null="true"
            foreign-key="FK_ACTION_USER_ACTOR_ID"/>
        <many-to-one
            name="_subject"
            column="subject_id"
            not-null="true"
            foreign-key="FK_ACTION_RESOURCE_SUBJECT_ID" />
        
        <map name="_parameters" table="action_params">
            <cache usage="transactional"/>
            <key column="action_id" not-null="true" foreign-key="FK_ACTION_PARAM_ACTION_ID"/>
            <map-key type="string" column="param_key" length="255"/>
            <element type="string" column="param_value" length="1024"  not-null="true"/>
        </map>
        
        <component name="_failure" class="ccc.domain.Failure">
            <property
                name="_code"
                column="failure_code"
                type="integer" />
            <property
                name="_exceptionId"
                column="failure_id"
                type="string" 
                length="36" />
                
            <!--<map name="_params" table="action_failure_params">
                <cache usage="transactional"/>
                <key column="action_id" not-null="true" foreign-key="FK_ACTION_FAILURE_ACTION_ID"/>
                <map-key type="string" column="param_key" length="255"/>
                <element type="string" column="param_value" length="2048"  not-null="true"/>
            </map>-->
        </component>
        
    </class>
    
    <query name="latest_action">FROM ccc.domain.Action a WHERE a._status='Scheduled' AND a._executeAfter &lt; ? ORDER BY a._executeAfter asc</query>
    <query name="executed">FROM ccc.domain.Action a WHERE a._status!='Scheduled'</query>
    <query name="pending">FROM ccc.domain.Action a WHERE a._status='Scheduled'</query>
</hibernate-mapping>