<hibernate-mapping default-access="field">

    <class
        name="ccc.domain.FileWorkingCopy"
        table="file_wcopies">
        
        <cache usage="transactional"/>
        
        <id name="_id" 
            column="id" 
            type="ccc.persistence.jpa.UUIDUserType"
            length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_size"
            column="size_in_bytes"
            not-null="true"
            type="int" />

        <component
            name="_data"
            class="ccc.domain.Data"
            unique="true">
            <property
                name="_id"
                not-null="true"
                column="data_id"
                type="ccc.persistence.jpa.UUIDUserType" 
                length="36" />
        </component>
        
        <component
            name="_mimeType"
            class="ccc.api.MimeType">
            <property
                name="_primaryType"
                not-null="true"
                column="mime_type_primary"
                type="string" 
                 length="255" />
            <property
                name="_subType"
                not-null="true"
                column="mime_type_sub"
                type="string" 
                 length="255" />
        </component>
                        
        <map name="_properties" table="file_wc_properties">
            <cache usage="transactional"/>
            <key column="file_wc_id" not-null="true" foreign-key="FK_FILEWCPROPS_FILEWC_ID"/>
            <map-key type="string" column="prop_key" length="255" />
            <element type="string" column="prop_value" length="1024" not-null="true"/>
        </map>

    </class>
    
</hibernate-mapping>