<hibernate-mapping default-access="field">
    <joined-subclass
        name="ccc.domain.Template" extends="ccc.domain.Resource" table="templates">
        <key column="id" foreign-key="FK_TEMPLATE_RESOURCE_ID"/>
        
        <property
            name="_pageVersion"
            column="version"
            not-null="true"
            type="integer" />
        
        <bag name="_history" cascade="all,delete-orphan">
            <cache usage="transactional"/>
            <key column="template_id" not-null="true" foreign-key="FK_REVISION_TEMPLATE_ID"/>
            <one-to-many class="ccc.domain.TemplateRevision" />
        </bag>
                
    </joined-subclass>
    
    <query name="templateByName">from ccc.domain.Template t where t._name = ?</query>
    <query name="allTemplates">from ccc.domain.Template</query>
</hibernate-mapping>