<hibernate-mapping default-access="field">
    <joined-subclass
        name="ccc.domain.Template" extends="ccc.domain.Resource" table="templates">
        <key column="id" foreign-key="FK_TEMPLATE_RESOURCE_ID"/>
        
        <property name="_title" column="title" not-null="true" type="string" length="256" />
        <property name="_body" column="body" not-null="true" type="text" length="65536" />
        <property name="_definition" column="definition" not-null="true" type="text" length="65536" />
        
        <component
            name="_mimeType"
            class="ccc.api.MimeType">
            <property
                name="_primaryType"
                not-null="true"
                column="mime_type_primary"
                type="string"
                length="256" />
            <property
                name="_subType"
                not-null="true"
                column="mime_type_sub"
                type="string" 
                length="256"/>
        </component>
        
    </joined-subclass>
    
    <query name="templateByName">from ccc.domain.Template t where t._name = ?</query>
    <query name="allTemplates">from ccc.domain.Template</query>
</hibernate-mapping>