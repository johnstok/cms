<hibernate-mapping default-access="field">

    <typedef class="ccc.persistence.jpa.EnumUserType" name="ParagraphType">
        <param name="type">ccc.api.ParagraphType</param>
    </typedef>
    
    <class
        name="ccc.domain.PageRevision"
        mutable="false"
        table="page_revisions">
        
        <cache usage="transactional"/>
        
        <id name="_id" 
            column="id" 
            type="ccc.persistence.jpa.UUIDUserType"
            length="36">
            <generator class="assigned" />
        </id>
		
        <set name="_content" table="page_revision_paragraphs">
            <cache usage="transactional"/>
            <key column="page_revision_id" not-null="true" foreign-key="FK_PARAGRAPH_REVISION_ID"/>
            <composite-element class="ccc.api.Paragraph">
                <property name="_name" column="name" not-null="true" type="string" length="255" />
                <property name="_type" column="type" not-null="true" type="ParagraphType" length="255" />
                <property name="_text" column="value_text" not-null="false" type="text" length="2147483647" />
                <property name="_boolean" column="value_boolean" not-null="false" type="boolean" />
                <property name="_date" column="value_date" not-null="false" type="timestamp" />
                <property 
                    name="_number" 
                    column="value_number" 
                    not-null="false"
                    scale="4"
                    precision="14" 
                    type="big_decimal" />
            </composite-element>
        </set>
        
        <property
            name="_majorChange"
            column="major_change"
            not-null="true" />
        <property
            name="_comment"
            column="actor_comment"
            not-null="false"
            length="1024"
            type="string" />  
        <property
            name="_timestamp"
            column="timestamp"
            not-null="true"
            type="timestamp" />
        <many-to-one
            name="_actor"
            column="actor_id"
            not-null="true"
            foreign-key="FK_REVISION_USER_ACTOR_ID" />
    </class>
    
</hibernate-mapping>