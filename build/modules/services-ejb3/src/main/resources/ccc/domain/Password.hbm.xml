<hibernate-mapping default-access="field">
    <class name="ccc.domain.Password">
    
        <id name="_id" type="ccc.services.ejb3.support.UUIDUserType">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            unsaved-value="negative" />
        
        <property
            name="_hash"
            not-null="true"
            unique="false"/>
            
        <many-to-one
            name="_user"
            not-null="true"/>
            
    </class>
</hibernate-mapping>