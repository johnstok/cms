<hibernate-mapping default-access="field">
    <joined-subclass
        name="ccc.domain.Template" extends="ccc.domain.Resource" table="templates">
        <key column="id" />
        
        <property name="_title" column="title" not-null="true" type="string" length="256" />
        <property name="_description" column="description" not-null="true" type="string" length="1024" />
        <property name="_body" column="body" not-null="true" type="text" />
        <property name="_definition" column="definition" not-null="true" type="text" />
        
    </joined-subclass>
    
    <query name="templateByName">from ccc.domain.Template t where t._name = ?</query>
    <query name="allTemplates">from ccc.domain.Template</query>
</hibernate-mapping>