<hibernate-mapping default-access="field">
    <joined-subclass
        name="ccc.domain.Alias"
        extends="ccc.domain.Resource"
        table="aliases">

        <key column="id" foreign-key="FK_ALIAS_RESOURCE_ID" />

		<many-to-one
            name="_target"
            column="target_id"
            not-null="true"
            lazy="false"
            foreign-key="FK_ALIAS_RESOURCE_TARGET_ID" />

    </joined-subclass>
</hibernate-mapping>