<hibernate-mapping default-access="field">
	
    <class name="ccc.domain.Group" table="groups">
    
        <id name="_id" 
        	column="id" 
        	type="ccc.persistence.jpa.UUIDUserType"
        	length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_name"
            column="name"
            not-null="true"
            unique="true"
            type="string"
            length="255" />
            
        <set name="_permissions" table="group_permissions">
            <key not-null="true" column="group_id" foreign-key="FK_GROUPPERMS_GROUP_ID"/>
            <element
                column="permission"
                type="string"
                not-null="true"
                length="255" />
        </set>
        
    </class>
</hibernate-mapping>