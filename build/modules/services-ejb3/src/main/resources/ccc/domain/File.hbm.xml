<hibernate-mapping default-access="field">
	<joined-subclass name="ccc.domain.File"
		extends="ccc.domain.Resource">
		<key column="_id" />

		<property name="_description" not-null="true" type="string"
			length="1024" />

		<component name="_data" class="ccc.domain.Data" unique="true">
            <property name="_id" not-null="true" column="_data"
                type="ccc.services.ejb3.support.UUIDUserType" />
        </component>

	</joined-subclass>
</hibernate-mapping>
