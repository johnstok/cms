<hibernate-mapping default-access="field">
	<joined-subclass name="ccc.domain.File" table="FILES"
		extends="ccc.domain.Resource">
		<key column="id" />

		<property name="_description" column="description" not-null="true" type="string"
			length="1024" />
			
	    <property name="_size" column="siz" not-null="true" type="long" />

		<component name="_data" class="ccc.domain.Data" unique="true">
            <property name="_id" not-null="true" column="data"
                type="ccc.services.ejb3.support.UUIDUserType" />
        </component>
        
        <component name="_mimeType" class="javax.activation.MimeType">
            <property name="primaryType" not-null="true" column="mime_primary_type"
                type="string" access="property" />
            <property name="subType" not-null="true" column="mime_sub_type"
                type="string" access="property" />
        </component>

	</joined-subclass>
	
	<query name="allImages">from ccc.domain.File f where f._mimeType.primaryType = 'image'</query>
	
</hibernate-mapping>
