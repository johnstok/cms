<hibernate-mapping default-access="field">
	<class name="ccc.domain.Resource" abstract="true">
	
		<id name="_id" type="ccc.services.ejb3.support.UUIDUserType">
			<generator class="assigned" />
		</id>
		
		<version name="_version" unsaved-value="negative" />

		<property name="_title" not-null="true" type="string"
			length="256" />
			
		<many-to-one name="_template" not-null="false" />
		
		<many-to-one name="_lockedBy" not-null="false" />

		<component name="_name" class="ccc.domain.ResourceName" update="false">
			<property name="_representation" not-null="true" column="_name"
				type="string" length="256" />
		</component>

        <!-- Add a read only property to access the parent_id column -->
        
        <many-to-one
            name="_parent"
            not-null="false"
            column="parent_id"
            insert="false"
            update="false"
        />
        
	</class>
    
    <query name="lockedResources">from ccc.domain.Resource r where r._lockedBy is not null</query>
    <query name="resourcesByName">from ccc.domain.Resource r where r._name = :name</query>
</hibernate-mapping>