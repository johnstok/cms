<hibernate-mapping default-access="field">

    <typedef class="ccc.services.ejb3.support.EnumUserType" name="LogEntryAction">
        <param name="type">ccc.domain.LogEntry$Action</param>
    </typedef>
    <typedef class="ccc.services.ejb3.support.EnumUserType" name="ResourceType">
        <param name="type">ccc.domain.ResourceType</param>
    </typedef>
    
    <class name="ccc.domain.LogEntry" mutable="false">
        
        <id name="_id" column="id" type="ccc.services.ejb3.support.UUIDUserType">
            <generator class="assigned" />
        </id>
        
		<many-to-one
            name="_actor"
            column="actor"
            not-null="true"/>
        
        <property
            name="_action"
            column="action"
            not-null="true"
            type="LogEntryAction" />
        <property
            name="_happenedOn"
            column="happenedon"
            not-null="true"
            type="timestamp" />
        <property
            name="_subjectType"
            column="subjecttype"
            not-null="true"
            type="ResourceType" />
        <property
            name="_subjectId"
            column="subjectid"
            not-null="true"
            type="ccc.services.ejb3.support.UUIDUserType" />
        <property
            name="_comment"
            column="cmmnt"
            not-null="true"
            type="string"
            length="1024"/>
        <property
            name="_detail"
            column="detail"
            not-null="true"
            type="text"
            length="2147483647"/>
        <property
            name="_index"
            column="idx"
            not-null="true"
            type="long"
            update="false"
            insert="false" 
            generated="insert"/>
        <property
            name="_recordedOn"
            column="recordedon"
            not-null="true"
            type="timestamp"
            update="false"
            insert="false" 
            generated="insert"/>
        <property
            name="_isMajorEdit"
            column="ismajoredit"
            not-null="true"
            type="boolean"/>
    </class>
    
    <query name="resourceHistory">from ccc.domain.LogEntry le where le._subjectId=?</query><!-- order by? -->
    <query name="logEntryById">from ccc.domain.LogEntry le where le._index=?</query>
</hibernate-mapping>