<hibernate-mapping default-access="field">

    <typedef class="ccc.services.ejb3.support.EnumUserType" name="LogEntryAction">
        <param name="type">ccc.domain.LogEntry$Action</param>
    </typedef>
    <typedef class="ccc.services.ejb3.support.EnumUserType" name="ResourceType">
        <param name="type">ccc.domain.ResourceType</param>
    </typedef>
    
    <class name="ccc.domain.LogEntry" mutable="false">
        
        <id name="_id" type="ccc.services.ejb3.support.UUIDUserType">
            <generator class="assigned" />
        </id>
        
		<many-to-one
            name="_actor"
            not-null="true"/>
        
        <property
            name="_action"
            not-null="true"
            type="LogEntryAction" />
        <property
            name="_happenedOn"
            not-null="true"
            type="timestamp" />
        <property
            name="_subjectType"
            not-null="true"
            type="ResourceType" />
        <property
            name="_subjectId"
            not-null="true"
            type="ccc.services.ejb3.support.UUIDUserType" />
        <property
            name="_summary"
            not-null="true"
            type="string"
            length="1024"/>
        <property
            name="_detail"
            not-null="true"
            type="text"/>
        <property
            name="_index"
            not-null="true"
            type="long"
            update="false"
            insert="false" 
            generated="insert"/>
        <property
            name="_recordedOn"
            not-null="true"
            type="timestamp"
            update="false"
            insert="false" 
            generated="insert"/>
    </class>
    
    <query name="resourceHistory">from ccc.domain.LogEntry le where le._subjectId=?</query><!-- order by? -->
</hibernate-mapping>