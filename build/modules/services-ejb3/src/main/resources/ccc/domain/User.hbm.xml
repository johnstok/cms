<hibernate-mapping default-access="field">

	<typedef class="ccc.services.ejb3.support.EnumUserType" name="CreatorRole">
	    <param name="type">ccc.domain.CreatorRoles</param>
	</typedef>
	
    <class name="ccc.domain.User">
    
        <id name="_id" type="ccc.services.ejb3.support.UUIDUserType">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_username"
            not-null="true"
            unique="true"
            type="string"
            length="256" />
        
        <component name="_email" class="ccc.commons.EmailAddress">
            <property name="_text" column="_email" not-null="true" type="string" length="256" />
        </component>
            
	    <set name="_roles">
	        <key not-null="true"/>
	        <element column="role" type="CreatorRole"/>
	    </set>

            
    </class>
    
    <query name="users">from ccc.domain.User u left join fetch u._roles</query>
    <query name="usersWithRole">from ccc.domain.User u left join fetch u._roles where ? in elements(u._roles)</query>
    <query name="usersWithUsername">from ccc.domain.User u where lower(u._username) like ?</query>
    <query name="usersWithEmail">from ccc.domain.User u where lower(u._email) like ?</query>
    <query name="passwordForUser">from ccc.domain.Password p where p._user._id = ?</query>
</hibernate-mapping>