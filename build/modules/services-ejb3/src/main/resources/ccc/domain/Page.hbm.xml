<hibernate-mapping default-access="field">

    <typedef class="ccc.services.ejb3.support.EnumUserType" name="ParargraphType">
        <param name="type">ccc.domain.Paragraph$Type</param>
    </typedef>
    
    <joined-subclass
        name="ccc.domain.Page"
        extends="ccc.domain.Resource"
        table="pages">
        <key column="id" />
        
        <component name="_workingCopy" class="ccc.domain.Snapshot">
			<property
                name="detail"
                access="property"
                not-null="false"
                column="working_copy"
				type="text" />
		</component>
		
        <set name="_content" table="paragraphs">
            <key column="page_id" not-null="true" />
            <composite-element class="ccc.domain.Paragraph">
                <property name="_name" column="name" not-null="true" type="string" length="255" />
                <property name="_type" column="type" not-null="true" type="ParargraphType" />
                <property name="_text" column="value_text" not-null="false" type="text" length="2147483647" />
                <property name="_boolean" column="value_boolean" not-null="false" type="boolean" />
                <property name="_date" column="value_date" not-null="false" type="timestamp" />
            </composite-element>
        </set>
        
    </joined-subclass>
</hibernate-mapping>