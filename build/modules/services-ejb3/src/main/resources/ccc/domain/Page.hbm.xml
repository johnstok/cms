<hibernate-mapping default-access="field">

    <typedef class="ccc.services.ejb3.support.EnumUserType" name="ParargraphType">
        <param name="type">ccc.domain.Paragraph$Type</param>
    </typedef>
    
    <joined-subclass
        name="ccc.domain.Page" extends="ccc.domain.Resource">
        <key column="_id" />
        
        <set name="_content">
            <key not-null="true" />
            <composite-element class="ccc.domain.Paragraph">
                <property name="_text" not-null="false" type="text" />
                <property name="_name" not-null="true" type="string" length="256" />
                <property name="_boolean" not-null="false" type="boolean" />
                <property name="_date" not-null="false" type="timestamp" />
                <property name="_type" not-null="true" type="ParargraphType" />
            </composite-element>
        </set>
        
    </joined-subclass>
</hibernate-mapping>