<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <parent>
        <artifactId>build</artifactId>
        <groupId>com.civicuk.cc</groupId>
        <version>7.3.0-SNAPSHOT</version>
    </parent>
    
    <properties>
        <parent_basedir>${basedir}/../..</parent_basedir>
    </properties>
    
    <artifactId>impl-ejb3</artifactId>
    <name>impl-ejb3</name>
    <packaging>ejb</packaging>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>api-plugins</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>api-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- FIXME: Remove this dependency? -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>plugin-s11n-json</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
        
        <!-- JEE dependencies -->
        
        <dependency>
	        <groupId>org.jboss.jbossas</groupId>
            <artifactId>jboss-as-tomcat</artifactId>
            <version>${lib.version.jboss}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>ejb3-persistence</artifactId>
            <version>${lib.version.hibernate-ejb3}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    
    <profiles>
        <profile>
            <id>schema</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>hibernate3-maven-plugin</artifactId>
                        <configuration>
                            <components>
                                <component>
                                    <name>hbm2ddl</name>
                                </component>
                            </components>
                            <componentProperties>
                                <implementation>jpaconfiguration</implementation>
                                <persistenceunit>${application.prefix}-persistence</persistenceunit>
                                <outputfilename>ccc7-schema.sql</outputfilename>
                                <drop>true</drop>
                                <create>true</create>
                                <update>false</update>
                                <export>false</export>
                                <ejb3>true</ejb3>
                            </componentProperties>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>process-classes</phase>
                                <goals>
                                    <goal>hbm2ddl</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>