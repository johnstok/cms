<assembly>
	<id>binary-release</id>
	<formats>
		<format>tar.gz</format>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<moduleSets>
		<moduleSet>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>modules</outputDirectory>
				<unpack>false</unpack>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>deploy</directory>
			<lineEnding>keep</lineEnding>
			<outputDirectory>containers</outputDirectory>
			<excludes>
				<exclude>jboss-4.2.2.GA\server\all\**</exclude>
				<exclude>jboss-4.2.2.GA\server\minimal\**</exclude>
				<exclude>jboss-4.2.2.GA\server\default\log\**</exclude>
				<exclude>jboss-4.2.2.GA\server\default\work\**</exclude>
				<exclude>jboss-4.2.2.GA\server\default\tmp\**</exclude>
				<exclude>jboss-4.2.2.GA\server\default\data\**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>dbms</directory>
			<lineEnding>keep</lineEnding>
			<outputDirectory>db-config</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>