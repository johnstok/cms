<persistence
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
    version="1.0">

    <persistence-unit name="${application.prefix}-persistence">
        <jta-data-source>java:/${application.prefix}</jta-data-source>
        <jar-file>../services-ejb3-7.0.0-SNAPSHOT.jar</jar-file>
        <properties>

            <!-- Connection mgmt -->
            <property name="hibernate.connection.release_mode" value="after_statement" />
            <property name="hibernate.connection.aggressive_release" value="true" />

            <!-- SQL dialect -->
            <property name="hibernate.dialect" value="${application.db-dialect}" />

            <!-- Caching  -->
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
            <property name="hibernate.cache.use_query_cache" value="false" />
            <property name="hibernate.cache.use_second_level_cache" value="false" />

            <!-- Debugging -->
            <!-- property name="hibernate.ejb.interceptor" value="ccc.services.ejb3.support.DebugInterceptor" / -->
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.use_sql_comments" value="true" />

            <!-- Drop and re-create the database schema on startup -->
            <property name="hibernate.hbm2ddl.auto" value="create" />

        </properties>
    </persistence-unit>
</persistence>