<hibernate-mapping default-access="field">
	<joined-subclass name="ccc.domain.File"
		extends="ccc.domain.Resource">
		<key column="_id" />
		
		<property name="_description" not-null="true" type="string" length="1024" />
		
		<list name="_fileDatas">
            <key column="file_id" />
            <list-index column="file_index" />
            <one-to-many class="ccc.domain.FileData" />
        </list>
	</joined-subclass>
</hibernate-mapping>
