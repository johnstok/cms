<policy>
    <!-- Config for certificate authentication in servlet
    -->
    <application-policy name = "ccc">
       <authentication>
          <login-module code="org.jboss.security.auth.spi.CertRolesLoginModule"
             flag = "required">
            <module-option name="password-stacking">useFirstPass</module-option>
            <module-option name="securityDomain">java:/jaas/client-cert</module-option>
            <module-option name="unauthenticatedIdentity">guest</module-option>
            <module-option name="rolesProperties">roles.properties</module-option>
          </login-module> 
       </authentication>
    </application-policy>
</policy>
