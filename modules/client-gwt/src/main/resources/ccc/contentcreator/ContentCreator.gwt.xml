<module>
    <super-source path="jre" />
	<!-- Inherit the core Web Toolkit stuff. -->
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.json.JSON" />
	<inherits name="com.google.gwt.i18n.I18N" />
	<inherits name="com.googlecode.gwt.math.Math" />
	<inherits name='com.extjs.gxt.ui.GXT' />
	<inherits name="ccc.API" />
	<inherits name="ccc.Types" />
    
    <inherits name="com.weborient.codemirror.CodemirrorGwt"/>

	<!-- Supported locales.
	<extend-property name="locale" values="fi" />
     -->
    <extend-property name="locale" values="en_GB" />

    <!-- Compile only for Firefox 
	<set-property name="user.agent" value="gecko1_8" />
    -->

	<!-- Specify the app entry point class. -->
	<entry-point class="ccc.contentcreator.client.ContentCreator" />

	<source path="actions" />
	<source path="api" />
	<source path="binding" />
	<source path="callbacks" />
	<source path="client" />
	<source path="dialogs" />
	<source path="validation" />
	<source path="controllers" />
	<source path="views" />
	<source path="overlays" />
	<source path="tests" />

	<!-- Specify the application specific style sheet. -->
	<stylesheet src="gxt/2.0.4/resources/css/gxt-all.css" />

</module>
