<hibernate-mapping default-access="field">

    <typedef class="ccc.persistence.jpa.EnumUserType" name="ParargraphType">
        <param name="type">ccc.api.ParagraphType</param>
    </typedef>
    
    <joined-subclass
        name="ccc.domain.Page"
        extends="ccc.domain.WorkingCopyAware"
        table="pages">
        <key column="id" />
		
        <set name="_content" table="paragraphs">
            <key column="page_id" not-null="true" />
            <composite-element class="ccc.api.Paragraph">
                <property name="_name" column="name" not-null="true" type="string" length="255" />
                <property name="_type" column="type" not-null="true" type="ParargraphType" />
                <property name="_text" column="value_text" not-null="false" type="text" length="2147483647" />
                <property name="_boolean" column="value_boolean" not-null="false" type="boolean" />
                <property name="_date" column="value_date" not-null="false" type="timestamp" />
                <property name="_number" column="value_number" not-null="false" type="big_decimal" />
            </composite-element>
        </set>
        
        <property
            name="workingCopyString"
            column="working_copy"
            not-null="false"
            access="property"
            length="2162688"
            type="text" />
        
    </joined-subclass>
    
	<query name="allPages">from ccc.domain.Page</query>
</hibernate-mapping>