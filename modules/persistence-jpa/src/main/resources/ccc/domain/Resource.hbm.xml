<hibernate-mapping default-access="field" default-cascade="none">
	<class name="ccc.domain.Resource" table="resources" abstract="true">
	
		<id name="_id" 
			column="id" 
			type="ccc.persistence.jpa.UUIDUserType"
			length="36">
			<generator class="assigned" />
		</id>
		
		<version
            name="_version"
            column="version"
            type="long"
            unsaved-value="negative" />

		<property
            name="_title"
            column="title"
            not-null="true"
            type="string"
            length="256" />
		<property
            name="_includeInMainMenu"
            column="in_main_menu"
            not-null="true" />
        <property
            name="_dateCreated"
            column="date_created"
            not-null="true"
            type="timestamp" />
        <property
            name="_dateChanged"
            column="date_changed"
            not-null="true"
            type="timestamp" />
        <property
            name="_description"
            column="description"
            not-null="false"
            type="string"
            length="1024" />

		<many-to-one
            name="_template"
            column="template_id"
            not-null="false" 
            foreign-key="FK_RESOURCE_TEMPLATE_ID"/>
		
		<many-to-one
            name="_lockedBy"
            column="locked_by_id"
            not-null="false"
            foreign-key="FK_RESOURCE_USER_LOCKED_ID" />
		
		<many-to-one
            name="_publishedBy"
            column="published_by_id"
            not-null="false" 
            foreign-key="FK_RESOURCE_USER_PUBLISHED_ID"/>

		<component name="_name" class="ccc.domain.ResourceName">
			<property
                name="_representation"
                not-null="true"
                column="name"
				type="string"
                length="256" />
		</component>

        <many-to-one
            name="_parent"
            not-null="false"
            column="parent_id"
            insert="false"
            update="false"
            foreign-key="FK_RESOURCE_FOLDER_PARENT_ID"
        />

        <list
            name="_tags"
            table="resource_tags">
            <key
                column="resource_id"
                not-null="true" 
                foreign-key="FK_RESTAGS_RESOURCE_ID"/>
            <list-index column="tag_index" />
            <element
                column="tag_value"
                type="string"
                not-null="true"
                unique="false" 
                length="256" />
        </list>

        <set name="_roles" table="resource_roles">
            <key column="resource_id" not-null="true" foreign-key="FK_RESROLES_RESOURCE_ID"/>
            <element
                column="role"
                type="string"
                not-null="true"
                length="256" />
        </set>
        
        <map name="_metadata" table="resource_metadata">
            <key column="resource_id" not-null="true" foreign-key="FK_RESMETADATA_RESOURCE_ID"/>
            <map-key type="string" column="datum_key" length="256" />
            <element type="string" column="datum_value" length="1024" not-null="true"/>
        </map>
        
        <component name="_cache" class="ccc.api.Duration">
			<property
                name="_time"
                not-null="false"
                column="cache_duration"
				type="long" />
		</component>
        
	</class>
    
    <query name="lockedResources">from ccc.domain.Resource r where r._lockedBy is not null</query>
    <query name="rootByName">from ccc.domain.Resource r where r._name = ? and r._parent is null</query>
    <query name="resourceByLegacyId">from ccc.domain.Resource r where r._metadata['legacyId'] = ?</query>
</hibernate-mapping>