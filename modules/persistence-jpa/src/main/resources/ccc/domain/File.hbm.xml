<hibernate-mapping default-access="field">
	<joined-subclass
        name="ccc.domain.File"
        extends="ccc.domain.Resource"
        table="files">
        
		<key column="id" />
			
	    <property
            name="_size"
            column="size_in_bytes"
            not-null="true"
            type="int" />

		<component
            name="_data"
            class="ccc.domain.Data"
            unique="true">
            <property
                name="_id"
                not-null="true"
                column="data_id"
                type="ccc.persistence.jpa.UUIDUserType" />
        </component>
        
        <component
            name="_mimeType"
            class="ccc.api.MimeType">
            <property
                name="_primaryType"
                not-null="true"
                column="mime_type_primary"
                type="string" />
            <property
                name="_subType"
                not-null="true"
                column="mime_type_sub"
                type="string" />
        </component>
        
        <property
            name="workingCopyString"
            column="working_copy"
            not-null="false"
            access="property"
            length="2162688"
            type="text" />
            
	</joined-subclass>
	
	<query name="allImages">from ccc.domain.File f where f._mimeType._primaryType = 'image'</query>
	<query name="allFiles">from ccc.domain.File</query>
	
</hibernate-mapping>
