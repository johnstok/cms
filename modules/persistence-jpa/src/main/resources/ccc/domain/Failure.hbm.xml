<hibernate-mapping default-access="field">

    <typedef class="ccc.persistence.jpa.EnumUserType" name="FailureCode">
        <param name="type">ccc.types.FailureCode</param>
    </typedef>
    
    <class name="ccc.domain.Failure" table="failures" mutable="false">
        
        <id name="_id" 
        	column="id" 
        	type="ccc.persistence.jpa.UUIDUserType" 
        	length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_code"
            column="failure_code"
            type="FailureCode" />
            
        <map name="_params" table="failure_params">
            <cache usage="transactional"/>
            <key column="failure_id" not-null="true" foreign-key="FK_FPARAM_FAILURE_ID"/>
            <map-key type="string" column="param_key" length="255"/>
            <element type="string" column="param_value" length="2048"  not-null="true"/>
        </map>
        
    </class>
    
</hibernate-mapping>