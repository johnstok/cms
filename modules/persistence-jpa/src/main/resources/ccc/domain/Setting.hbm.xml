<hibernate-mapping default-access="field">

	<typedef class="ccc.persistence.jpa.EnumUserType" name="settingName">
	    <param name="type">ccc.domain.Setting$Name</param>
	</typedef>
	
    <class name="ccc.domain.Setting" table="settings">
    
        <id name="_id" 
        	column="id" 
        	type="ccc.persistence.jpa.UUIDUserType"
        	length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_value"
            column="value"
            not-null="true"
            type="string"
            length="1024" />
            
        <property
            name="_name"
            column="name"
            not-null="true"
            type="settingName"
            length="255"
            unique="true" />
        
    </class>
    
    <query name="settings-with-name">from ccc.domain.Setting s where s._name=?</query>
</hibernate-mapping>