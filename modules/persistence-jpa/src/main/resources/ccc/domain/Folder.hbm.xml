<hibernate-mapping default-access="field">
    <typedef class="ccc.persistence.jpa.EnumUserType" name="SortOrder">
        <param name="type">ccc.domain.ResourceOrder</param>
    </typedef>
    
    <joined-subclass
        name="ccc.domain.Folder" 
        extends="ccc.domain.Resource"
        table="folders">
        
        <key column="id" foreign-key="FK_FOLDER_RESOURCE_ID"/>
        
        <property
            name="_order"
            column="sort_order"
            not-null="true"
            type="SortOrder" 
            length="255" />
        
        <list name="_entries">
       		<cache usage="transactional"/>
            <key column="parent_id" />
            <list-index column="parent_index" />
            <one-to-many class="ccc.domain.Resource" />
        </list>
        
        
        <many-to-one
            name="_indexPage"
            column="index_page"
            not-null="false"
            foreign-key="FK_FOLDER_INDEX_PAGE_ID" />
        
    </joined-subclass>
    
    <query name="roots">from ccc.domain.Folder f where f._parent is null order by _name asc</query>
</hibernate-mapping>