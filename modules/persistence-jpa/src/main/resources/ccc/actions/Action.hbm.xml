<hibernate-mapping default-access="field">

    <typedef class="ccc.persistence.jpa.EnumUserType" name="ActionType">
        <param name="type">ccc.domain.LogEntry$Action</param>
    </typedef>
    <typedef class="ccc.persistence.jpa.EnumUserType" name="StatusType">
        <param name="type">ccc.actions.Action$Status</param>
    </typedef>
    
    <class name="ccc.actions.Action" table="actions">
        
        <id name="_id" column="id" type="ccc.persistence.jpa.UUIDUserType">
            <generator class="assigned" />
        </id>
        
        <property
            name="_executeAfter"
            column="execute_after"
            type="timestamp"
            not-null="true" />
        <property
            name="_type"
            column="type"
            type="ActionType"
            not-null="true" />
        <property
            name="_status"
            column="status"
            type="StatusType"
            not-null="true" />
        
        <many-to-one
            name="_actor"
            column="actor_id"
            not-null="true" />
        <many-to-one
            name="_subject"
            column="subject_id"
            not-null="true" />
        
        <component name="_parameters" class="ccc.domain.Snapshot">
			<property
                name="detail"
                column="parameters"
                type="text"
                not-null="true"
                access="property" />
		</component>
        
        <component name="_failure" class="ccc.domain.Snapshot">
            <property
                name="detail"
                column="failure"
                type="text"
                not-null="false"
                access="property" />
        </component>
        
    </class>
    
    <query name="latest_action">FROM ccc.actions.Action a WHERE a._status='Scheduled' AND a._executeAfter &lt; ? ORDER BY a._executeAfter asc</query>
    <query name="executed">FROM ccc.actions.Action a WHERE a._status!='Scheduled'</query>
    <query name="pending">FROM ccc.actions.Action a WHERE a._status='Scheduled'</query>
</hibernate-mapping>