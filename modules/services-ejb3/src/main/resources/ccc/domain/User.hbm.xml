<hibernate-mapping default-access="field">
	
    <class name="ccc.domain.User" table="users">
    
        <id name="_id" column="id" type="ccc.services.ejb3.support.UUIDUserType">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="version"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_username"
            column="username"
            not-null="true"
            unique="true"
            type="string"
            length="255" />
        
        <component name="_email" class="ccc.commons.EmailAddress">
            <property name="_text" column="email" not-null="true" type="string" length="255" />
        </component>
            
        <set name="_roles" lazy="false" table="user_roles"> <!-- TODO: set lazy to true -->
            <key not-null="true" column="user_id" />
            <element
                column="role"
                type="string"
                not-null="true"/>
        </set>

            
    </class>
    
    <query name="users">from ccc.domain.User u left join fetch u._roles</query>
    <query name="usersWithRole">from ccc.domain.User u left join fetch u._roles where ? in elements(u._roles)</query>
    <query name="usersWithUsername">from ccc.domain.User u where lower(u._username) like ?</query>
    <query name="usersWithEmail">from ccc.domain.User u where lower(u._email) like ?</query>
    <query name="passwordForUser">from ccc.domain.Password p where p._user._id = ?</query>
</hibernate-mapping>