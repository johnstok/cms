<hibernate-mapping default-access="field">
    
    <class
        name="ccc.domain.TemplateRevision"
        mutable="false"
        table="template_revisions">
        
        <cache usage="transactional"/>
        
        <id name="_id" 
            column="id" 
            type="ccc.plugins.persistence.hibernate.UUIDUserType"
            length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
		
        <property name="_body" column="body" not-null="true" type="text" length="65536" />
        <property name="_definition" column="definition" not-null="true" type="text" length="65536" />
        
        <component
            name="_mimeType"
            class="ccc.api.types.MimeType">
            <property
                name="_primaryType"
                not-null="true"
                column="mime_type_primary"
                type="string"
                length="255" />
            <property
                name="_subType"
                not-null="true"
                column="mime_type_sub"
                type="string" 
                length="255"/>
        </component>
        
        <property
            name="_majorChange"
            column="major_change"
            not-null="true" />
        <property
            name="_comment"
            column="actor_comment"
            not-null="false"
            length="1024"
            type="string" />
        <property
            name="_timestamp"
            column="timestamp"
            not-null="true"
            type="timestamp" />
        <many-to-one
            name="_actor"
            column="actor_id"
            not-null="true"
            foreign-key="FK_TEMPLATE_REV_USER_ACTOR_ID" />
    </class>
    
</hibernate-mapping>