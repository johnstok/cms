<hibernate-mapping default-access="field">

    <typedef class="ccc.persistence.jpa.EnumUserType" name="ResourceType">
        <param name="type">ccc.api.types.ResourceType</param>
    </typedef>
    
    <class
        name="ccc.domain.LogEntry"
        mutable="false"
        table="logentries">
        
        <id name="_id" 
        	column="id" 
        	type="ccc.persistence.jpa.UUIDUserType" 
        	length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
        
		<many-to-one
            name="_actor"
            column="actor_id"
            not-null="true"
            foreign-key="FK_LOGENTRY_USER_ACTOR_ID" />
        
        <property
            name="_action"
            column="command"
            not-null="true"
            type="string"
            length="255" />
        <property
            name="_isSystem"
            column="system"
            not-null="true"
            type="boolean" />
        <property
            name="_happenedOn"
            column="happened_on"
            not-null="true"
            type="timestamp" />
        <property
            name="_subjectId"
            column="subject_id"
            not-null="true"
            type="ccc.persistence.jpa.UUIDUserType" 
            length="36" />
        <property
            name="_detail"
            column="detail"
            not-null="true"
            type="text"
            length="2147483647"/>
        <property
            name="_index"
            column="index_position"
            not-null="true"
            type="long"
            update="false"
            insert="false" 
            generated="insert"/>
        <property
            name="_recordedOn"
            column="recorded_on"
            not-null="true"
            type="timestamp"
            update="false"
            insert="false" 
            generated="insert"/>
    </class>
    
    <query name="resourceHistory">from ccc.domain.LogEntry le where le._subjectId=?</query><!-- order by? -->
    <query name="logEntryById">from ccc.domain.LogEntry le where le._index=?</query>
</hibernate-mapping>