<hibernate-mapping default-access="field">

	<typedef class="ccc.services.ejb3.support.EnumUserType" name="settingName">
	    <param name="type">ccc.domain.Setting$Name</param>
	</typedef>
	
    <class name="ccc.domain.Setting">
    
        <id name="_id" type="ccc.services.ejb3.support.UUIDUserType">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_value"
            not-null="true"
            type="string"
            length="256" />
            
        <property
            name="_name"
            not-null="true"
            type="settingName"
            length="256"
            unique="true" />
        
    </class>
    
    <query name="settingsByName">from ccc.domain.Setting s where s._name=:name</query>
</hibernate-mapping>