<hibernate-mapping default-access="field" default-cascade="none">
	<class name="ccc.domain.Resource" table="RESOURCES" abstract="true">
	
		<id name="_id" column="id" type="ccc.services.ejb3.support.UUIDUserType">
			<generator class="assigned" />
		</id>
		
		<version
            name="_version"
            column="version"
            type="long"
            unsaved-value="negative" />

		<property name="_title" column="title" not-null="true" type="string" length="256" />
		<property name="_includeInMainMenu" column="includeInMainMenu" not-null="true" />
        <property name="_dateCreated" column="dateCreated" not-null="true" type="timestamp" />
        <property name="_dateChanged" column="dateChanged" not-null="true" type="timestamp" />

		<many-to-one name="_template" column="template" not-null="false" />
		
		<many-to-one name="_lockedBy" column="lockedBy" not-null="false" />
		
		<many-to-one name="_publishedBy" column="publishedBy" not-null="false" />

		<component name="_name" class="ccc.domain.ResourceName">
			<property name="_representation" not-null="true" column="name"
				type="string" length="256" />
		</component>

        <many-to-one
            name="_parent"
            not-null="false"
            column="parent_id"
            insert="false"
            update="false"
        />

        <list name="_tags" table="RESOURCE_TAGS">
            <key column="id" />
            <list-index column="idx" />
            <element
                column="tag"
                type="string"
                not-null="true"
                unique="false" />
        </list>

        <set name="_roles">
            <key not-null="true" column="id" />
            <element
                column="role"
                type="string"
                not-null="true"/>
        </set>
        
        <map name="_metadata">
            <key column="id" />
            <map-key type="string" column="ky" length="100" />
            <element type="string" column="value" length="1000" not-null="true"/>
        </map>
        
	</class>
    
    <query name="lockedResources">from ccc.domain.Resource r where r._lockedBy is not null</query>
    <query name="rootByName">from ccc.domain.Resource r where r._name = ? and r._parent is null</query>
</hibernate-mapping>