<hibernate-mapping default-access="field" default-cascade="none">
	<class name="ccc.domain.Resource" abstract="true">
	
		<id name="_id" type="ccc.services.ejb3.support.UUIDUserType">
			<generator class="assigned" />
		</id>
		
		<version
            name="_version"
            type="long"
            unsaved-value="negative" />

		<property name="_title" not-null="true" type="string" length="256" />
        
		<property name="_includeInMainMenu" not-null="true" />

		<many-to-one name="_template" not-null="false" />
		
		<many-to-one name="_lockedBy" not-null="false" />
		
		<many-to-one name="_publishedBy" not-null="false" />

		<component name="_name" class="ccc.domain.ResourceName">
			<property name="_representation" not-null="true" column="_name"
				type="string" length="256" />
		</component>

        <many-to-one
            name="_parent"
            not-null="false"
            column="parent_id"
            insert="false"
            update="false"
        />

        <list name="_tags">
            <key column="_id" />
            <list-index column="_index" />
            <element
                column="_tag"
                type="string"
                not-null="true"
                unique="false" />
        </list>
        
        <map name="_metadata">
            <key column="_id" />
            <map-key type="string" column="_key" length="100" />
            <element type="string" column="_value" length="1000" not-null="true"/>
        </map>
        
	</class>
    
    <query name="lockedResources">from ccc.domain.Resource r where r._lockedBy is not null</query>
    <query name="rootByName">from ccc.domain.Resource r where r._name = ? and r._parent is null</query>
</hibernate-mapping>