<hibernate-mapping default-access="field">
	<joined-subclass
        name="ccc.domain.File"
        extends="ccc.domain.Resource"
        table="files">
        
		<key column="id" />

		<property
            name="_description"
            column="description"
            type="string"
            not-null="true"
			length="1024" />
			
	    <property
            name="_size"
            column="size_in_bytes"
            not-null="true"
            type="long" />

		<component
            name="_data"
            class="ccc.domain.Data"
            unique="true">
            <property
                name="_id"
                not-null="true"
                column="data_id"
                type="ccc.services.ejb3.support.UUIDUserType" />
        </component>
        
        <component
            name="_mimeType"
            class="javax.activation.MimeType">
            <property
                name="primaryType"
                not-null="true"
                column="mime_type_primary"
                type="string"
                access="property" />
            <property
                name="subType"
                not-null="true"
                column="mime_type_sub"
                type="string"
                access="property" />
        </component>

	</joined-subclass>
	
	<query name="allImages">from ccc.domain.File f where f._mimeType.primaryType = 'image'</query>
	
</hibernate-mapping>
