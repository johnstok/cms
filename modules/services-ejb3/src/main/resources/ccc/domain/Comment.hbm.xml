<hibernate-mapping default-access="field">
    <typedef class="ccc.persistence.jpa.EnumUserType" name="CommentStatus">
        <param name="type">ccc.api.types.CommentStatus</param>
    </typedef>

    <class name="ccc.domain.Comment" table="comments">
        
        <id name="_id" 
        	column="id" 
        	type="ccc.persistence.jpa.UUIDUserType" 
        	length="36">
            <generator class="assigned" />
        </id>
        
        <version
            name="_version"
            column="vn"
            type="long"
            unsaved-value="negative" />
        
        <property
            name="_timestamp"
            column="timestamp"
            type="timestamp"
            update="false"
            not-null="true" />
        <property
            name="_body"
            column="body"
            type="text"
            not-null="true"
            length="65536" />
        <property
            name="_author"
            column="author"
            type="string"
            not-null="true"
            length="1024" />
        <property
            name="_status"
            column="status"
            not-null="true"
            type="CommentStatus" 
            length="255" />
        <property
            name="_url"
            column="url"
            type="ccc.persistence.jpa.URLUserType"
            not-null="false"
            length="1024" />
        <component name="_email" class="ccc.api.types.EmailAddress">
            <property name="_text" column="email" not-null="true" type="string" length="512" />
        </component>
        
        <many-to-one
            name="_resource"
            column="resource_id"
            not-null="true"
            update="false"
            foreign-key="FK_COMMENT_RESOURCE_ID"/>
    </class>
    
</hibernate-mapping>